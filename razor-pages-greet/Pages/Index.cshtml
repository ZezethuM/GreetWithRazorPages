@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container">
    <div class="text-center">
        <div class="widget">
            <form method="post">
                <h1 class="display-4">GreetApp</h1>
                @if(Model.Handler != "remove")
                {
                     <div asp-validation-summary="All" class="text-danger"></div>
                }
            <div class="names">
                <label  class="form-check-label" for="flexRadioDefault1">Name</label>
                <input asp-for="Greeter!.Name" /> 
                <div>@Model.Count</div>
            </div>
            <div class="radio">
                <input asp-for="Greeter!.Language" class="form-check-input" type="radio" value="Isixhosa" id="flexRadioDefault1">
                <label  class="form-check-label" for="flexRadioDefault1">Xhosa</label>
                <input asp-for="Greeter!.Language" class="form-check-input" type="radio" value="English" id="flexRadioDefault2">
                <label class="form-check-label" for="flexRadioDefault2">English</label>
                <input asp-for="Greeter!.Language" class="form-check-input" type="radio" value="French" id="flexRadioDefault3">
                <label class="form-check-label" for="flexRadioDefault3">French</label>
            </div>
            <div class="btn">
                    <button asp-page-handler="greet" type="submit" class="btn btn-outline-primary btn-lg">Greet</button>
            </div>
            <div class="displayName">
                @if(Model.Greeter != null)
                {
                    @Model.Greeting
                }
            </div>
        </form>
    </div>
</div>
</div>

