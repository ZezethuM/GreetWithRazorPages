@using greetWithMVC
@model Greet

<div class="containers">
    <div class="mobile">
        <div class="header-section"></div>
        <div class="screen">
            <form method="post">
                <h1 class="display-4" id="head">GreetApp</h1>
            <div class="names">
                <input asp-for="@Model.FriendsName" type="name" class="form-control" required placeholder="Enter Name" />
            </div>
            <h6>Select Language: </h6>
            <div class="radio">
                <input asp-for="@Model.Language" class="form-check-input" type="radio" value="Isixhosa" id="flexRadioDefault1" />
                <label  class="form-check-label" for="flexRadioDefault1">Xhosa</label>
                <input asp-for="@Model.Language" class="form-check-input" type="radio" value="English" id="flexRadioDefault2">
                <label class="form-check-label" for="flexRadioDefault2">English</label>
                <input asp-for="@Model.Language" class="form-check-input" type="radio" value="French" id="flexRadioDefault3">
                <label class="form-check-label" for="flexRadioDefault3">French</label>
            </div>
            <div class="btn">
                    <button asp-page-handler="greet" type="submit" class="btn btn-success btn-lg">Greet</button>
            </div>
            <div class="count"><h6>Greeted People : @ViewData["Count"]</h6></div>
             <div class="displayName">
                <span class="alert">@ViewData["FriendsName"]</span>
            </div>
            </form>
        </div>
    </div>
</div>
